@model IEnumerable<webHibiscus.Reserva>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de cita
        </th>
        <th>
            Cliente
        </th>
        <th>
            Empleado
        </th>
        <th>
            Nombre del servicio
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ValueFor(modelItem => item.fecha_Hora, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser1.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Servicio.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_Reserva }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_Reserva }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_Reserva })
        </td>
    </tr>
}

</table>
