@model webHibiscus.Resennia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>¿Está que quieres eliminar a: @Html.DisplayFor(model => model.AspNetUser.nombre) @Html.DisplayFor(model =>
                            model.AspNetUser.apellido1) @Html.DisplayFor(model => model.AspNetUser.apellido2)?</h2>


<div>
  <div class="card table-responsive" style="border-radius: 8px;">
        <table class="table table-striped">
            <tr>
                <th>
                    <b>
                        <h4>
                            Nombre completo
                        </h4>
                    </b>
                </th>
                <td>
                    <h4>
                        <text>@Html.DisplayFor(model => model.AspNetUser.nombre) @Html.DisplayFor(model =>
                            model.AspNetUser.apellido1) @Html.DisplayFor(model => model.AspNetUser.apellido2) </text>

                    </h4>
            </tr>
            <tr>
                <th>
                    <b>
                        <h4>Descripción</h4>
                    </b>
                </th>
                <th>
                    <h4>@Html.DisplayFor(model =>model.cotenido)</h4>
                </th>
            </tr>
            <tr>
                <th>
                    <b>
                        <h4>Fecha</h4>
                    </b>
                </th>
                <th>
                    <h4>@Html.DisplayFor(model => model.fecha)</h4>
                </th>
            </tr>
            <tr>
                <th>
                    <b>
                        <h4>Puntuacion</h4>
                    </b>
                </th>
                <th>
                     <fieldget class="starability-basic">

                    @for (int i = 1; i <= 5; i++)
                    {

                        if (Model.puntuacion == i)
                        {

                            @Html.RadioButtonFor(model => model.puntuacion, i, new { @type = "radio", @id = "first-rate" + i, @name = "rating",  @readonly = "true" })
                            @Html.Label("first-rate" + i)


                        }
                        else
                        {

                            @Html.RadioButtonFor(model => model.puntuacion, i, new { @type = "radio", @id = "first-rate" + i, @name = "rating", @readonly = "true" })
                            @Html.Label("first-rate" + i)

                        } //Fin del else.

                        //Fin del for.
                    }

                </fieldset>
                </th>
        </table>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index", "Resennia")" class="btn btn-success">Cancelar</a>
            <input type="submit" value="Borrar" class="btn btn-warning" /> 
            
        </div>
    }
</div>
