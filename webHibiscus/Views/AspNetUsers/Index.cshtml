@model IEnumerable<webHibiscus.AspNetUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="row">
        <h2>Usuarios</h2>
        @* <div class="col-md-12" style="text-align: right; margin-bottom: 15px;">
            <a class="btn btn-primary btn-small" href="@Url.Action("Create")">Crear Usuario</a>
        </div> *@
    </div>


    <div class="card table-responsive" style="border-radius: 8px;">
        <table class="table table-striped">

            <tr>
                <th colspan="3" style="text-align: center;">
                    <p>Nombre Completo</p>
                </th>


                <th>
                    <p>Nombre Usuario</p>
                </th>

                <th>
                    <p> Correo Electronico</p>
                </th>
                <th>
                    <p>Cedula</p>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    <p>Genero</p>
                </th>
                <th colspan="3" style="text-align: center;">
                    <p>Acciones</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido2)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cedula_Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero.Genero1)
                    </td>
                    <td>


                        <a class="btn btn-warning btn-small" href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-info btn-small" href="@Url.Action("Details", new { id = item.Id })">Detalles</a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-small" href="@Url.Action("Delete", new{ id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
