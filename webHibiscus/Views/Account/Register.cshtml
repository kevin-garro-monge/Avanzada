@model webHibiscus.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrate en Hibiscus";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
    <div class="col-md-8">
    @Html.AntiForgeryToken()
    <h4>¡Encuentra una variedad de cortes y estilos que te fascinarán!</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
      <h4>  @Html.LabelFor(m => m.Email,"Correo Electronico", new { @class = "col-md-2 control-label" })</h4>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
      <h4>  @Html.LabelFor(m => m.Password,"Contraseña", new { @class = "col-md-2 control-label" })</h4>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
      <h4>  @Html.LabelFor(m => m.ConfirmPassword,"Confirmar Contraseña",new { @class = "col-md-2 control-label" })</h4>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Registrar" />
        </div>
    </div>
    </div>
    </div>
    
}
 <p>¿Ya tienes cuenta? <a href="@Url.Action("Login", "Account")">Inicio de sesión</a>.</p>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
