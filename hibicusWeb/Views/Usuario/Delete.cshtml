@model hibicusWeb.Usuario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<b><h3>¿Estás seguro que quieres eliminar el usuario: @Html.DisplayFor(model => model.nombre)?</h3></b>
<div class="row">
    <table class="table table-striped card" style="border-radius: 8px;">
        <tr>
            <th>
                <h4>Rol:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.Rol_Usuario.tipo_Rol)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Nombre:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.nombre)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Primer Apellido:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.apellido1)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Segundo Apellido:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.apellido2)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Cédula</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.cedula_Usuario)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Correo:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.correo)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Teléfono:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.telefono)</h4>
            </td>
        </tr>
        <tr>
            <th>
                <h4>Genero:</h4>
            </th>
            <td>
                <h4> @Html.DisplayFor(model => model.Genero.Genero1)</h4>
            </td>
        </tr>



    </table>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sí, eliminar" class="btn btn-danger" /> 
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-success">Cancelar</a>
           
        </div>
    }
</div>
